<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#32BDA1"
    android:padding="16dp">

    <ImageView
        android:id="@+id/image1"
        android:layout_width="183dp"
        android:layout_height="194dp"
        android:layout_marginTop="39dp"
        android:contentDescription="Image 1"
        android:src="@drawable/gato1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Imagen 1"
        android:textColor="#673AB7"
        app:layout_constraintStart_toStartOf="@id/image1"
        app:layout_constraintTop_toBottomOf="@id/image1" />

    <ImageView
        android:id="@+id/image2"
        android:layout_width="154dp"
        android:layout_height="218dp"
        android:layout_marginTop="36dp"
        android:contentDescription="Image 2"
        android:src="@drawable/gato2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Imagen 2"
        android:textColor="#673AB7"
        app:layout_constraintEnd_toEndOf="@id/image2"
        app:layout_constraintTop_toBottomOf="@id/image2" />

    <ImageView
        android:id="@+id/image3"
        android:layout_width="152dp"
        android:layout_height="227dp"
        android:layout_marginStart="0.5dp"
        android:layout_marginBottom="152dp"
        android:contentDescription="Image 3"
        android:src="@drawable/gato3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Imagen 3"
        android:textColor="#673AB7"
        app:layout_constraintStart_toStartOf="@id/image3"
        app:layout_constraintTop_toBottomOf="@id/image3" />


    <ImageView
        android:id="@+id/image4"
        android:layout_width="175dp"
        android:layout_height="189dp"
        android:layout_marginBottom="176dp"
        android:contentDescription="Image 4"
        android:src="@drawable/gato4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/text4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Imagen 4"
        android:textColor="#673AB7"
        app:layout_constraintEnd_toEndOf="@id/image4"
        app:layout_constraintTop_toBottomOf="@id/image4" />

    <Button
        android:id="@+id/buttonCloseApp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="68dp"
        android:backgroundTint="#761B8F"
        android:text="Cerrar AplicaciÃ³n"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.552"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>